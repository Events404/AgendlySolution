@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked Out";
}

<div class="container vh-100 d-flex align-items-center justify-content-center">
    <!-- زر افتراضي لتفعيل البوب أب -->
    <button type="button" class="btn btn-primary d-none" id="openModalButton" data-bs-toggle="modal" data-bs-target="#lockoutModal">
        Open Modal
    </button>

    <!-- النافذة المنبثقة -->
    <div class="modal fade" id="lockoutModal" tabindex="-1" aria-labelledby="lockoutModalLabel" aria-hidden="true"
         data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="lockoutModalLabel">
                        <i class="fas fa-lock"></i> @ViewData["Title"]
                    </h5>
                </div>
                <div class="modal-body text-center">
                    <!-- أيقونة كبيرة معبرة -->
                    <div class="text-danger mb-4">
                        <i class="fas fa-lock fa-7x"></i>
                    </div>

                    <!-- وصف المشكلة -->
                    <p class="text-muted fs-5">
                        This account has been locked out. Please try again later or contact support if the issue persists.
                    </p>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <!-- زر العودة للصفحة الرئيسية -->
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Go to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // تشغيل البوب أب عند تحميل الصفحة
        document.addEventListener('DOMContentLoaded', function () {
            var modalButton = document.getElementById('openModalButton');
            modalButton.click();
        });
    </script>
}
