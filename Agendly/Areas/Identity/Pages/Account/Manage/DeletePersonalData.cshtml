@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    Layout = "_DashboardUserLayout.cshtml";
}

<div class="container mt-5">
    <h3 class="text-center">@ViewData["Title"]</h3>

    <p class="text-center">
        Deleting this data will permanently remove your account, and this cannot be recovered.
    </p>

    <div class="card shadow-sm p-4 mx-auto" style="max-width: 500px;">
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            @if (Model.RequirePassword)
            {
                <div class="mb-3">
                    <label for="password" class="form-label">Please enter your password</label>
                    <input asp-for="Input.Password" class="form-control" id="password" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                    <div class="form-text text-danger">
                        <span asp-validation-for="Input.Password"></span>
                    </div>
                </div>
            }

            <button class="w-100 btn btn-lg btn-danger" type="submit">Delete data and close my account</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
