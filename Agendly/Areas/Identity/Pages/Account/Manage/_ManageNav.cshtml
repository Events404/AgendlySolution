@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<!-- Button to toggle offcanvas (Sidebar) -->
<button class="btn btn-primary" type="button" id="sidebar-toggle" aria-label="Toggle sidebar">
    <i class="fas fa-bars"></i>
</button>

<!-- Offcanvas Sidebar -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="sidebarOffcanvasLabel">SENDLY</h5>
        <!-- Close button inside the offcanvas -->
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <div class="offcanvas-body">
        <p class="text-muted">Navigation Dashboard</p>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" id="view-events" asp-page="./ViewEvents">
                    <i class="fas fa-calendar-check mr-2"></i> View Events
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="created-events" asp-page="./CreatedEvents">
                    <i class="fas fa-calendar-plus mr-2"></i> Created Events
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="event-reports" asp-page="./EventReports">
                    <i class="fas fa-chart-line mr-2"></i> Event Reports
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="promo-codes" asp-page="./PromoCodes">
                    <i class="fas fa-tags mr-2"></i> Promo Codes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#profile-edit-submenu" aria-expanded="false" aria-controls="profile-edit-submenu">
                    <i class="fas fa-user-edit mr-2"></i> Edit Profile <i class="fas fa-chevron-down ms-auto"></i>
                </a>
                <ul class="collapse list-unstyled" id="profile-edit-submenu">
                    <li><a class="nav-link text-muted" asp-page="./Index"><i class="fas fa-id-card mr-2"></i>Profile</a></li>
                    <li><a class="nav-link text-muted" asp-page="./Email"><i class="fas fa-envelope mr-2"></i>Email</a></li>
                    <li><a class="nav-link text-muted" asp-page="./ChangePassword"><i class="fas fa-lock mr-2"></i>Password</a></li>
                    <li><a class="nav-link text-muted" asp-page="./PersonalData"><i class="fas fa-address-card mr-2"></i>Personal Data</a></li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="messages" asp-page="./Messages">
                    <i class="fas fa-comments mr-2"></i> Messages
                </a>
            </li>
            <li class="nav-item">
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn btn-danger w-100 text-left">
                        <i class="fas fa-sign-out-alt mr-2"></i> Logout
                    </button>
                </form>
            
            </li>
        </ul>
    </div>
</div>

<!-- Optional: Bootstrap's JS bundle for functionality -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<!-- Toggle Sidebar script -->
<script>
    document.getElementById('sidebar-toggle').addEventListener('click', function () {
        var offcanvas = new bootstrap.Offcanvas(document.getElementById('sidebarOffcanvas'));
        offcanvas.toggle();
    });
</script>
