@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="~/css/_DashboardLayout.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        /* General Reset for Padding and Margin */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        /* Header Styling */
        header {
            background-color: #2c3e50; /* تغيير اللون إلى اللون الرمادي الداكن */
            color: #ecf0f1; /* تغيير اللون إلى اللون الفاتح */
            padding: 15px 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 10;
        }

            header .logo {
                max-height: 50px;
            }

            header .nav-links a {
                color: #ecf0f1;
                text-decoration: none;
                margin-left: 15px;
                transition: color 0.3s ease-in-out;
            }

                header .nav-links a:hover {
                    color: #f39c12; /* تغيير اللون عند التمرير إلى اللون الذهبي */
                }

        /* Sidebar Styling */
        .sidebar {
            position: fixed;
            top: 80px; /* Adjusted for header height */
            left: 0;
            width: 250px;
            height: calc(100% - 80px); /* Full height minus header */
            background-color: #34495e; /* تغيير اللون إلى الرمادي الداكن */
            color: white;
            padding-top: 20px;
            padding-left: 15px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
        }

            .sidebar .logo {
                max-width: 100%;
                height: 100px;
                margin-bottom: 20px;
            }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 10px;
                display: block;
                margin-bottom: 10px;
                transition: background-color 0.3s;
            }

                .sidebar a:hover, .sidebar .active {
                    background-color: #16a085; /* تغيير اللون عند التمرير إلى اللون الأخضر الداكن */
                }

        /* Main Content Styling */
        main {
            margin-left: 260px; /* Adjust for sidebar width */
            padding-top: 80px; /* Adjust for header height */
            padding-right: 20px;
            height: 100%;
            overflow: auto; /* Add scrolling if content overflows */
            width: 90%;
        }

        /* Content Container */
        .container {
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Header Section -->
        <header class="row align-items-center">
            <div class="col-md-6 d-flex align-items-center">
                <img src="~/Logo/logo.png" alt="Site Logo" class="logo">
            </div>
            <div class="col-md-6 text-right nav-links">
                <a href="/">Home</a>
            </div>
        </header>

        <div class="row">
            <!-- Sidebar -->
            <nav class="sidebar">
                <!-- Logo Section -->
                <div class="text-center">
                    @if (UserManager.GetUserAsync(User).Result.ProfilePicture != null)
                    {
                        <img src="data:image/*;base64,@Convert.ToBase64String(UserManager.GetUserAsync(User).Result.ProfilePicture)" class="logo" />
                    }
                    else
                    {
                        <img src="~/Logo/Admin.jpg" alt="Admin Logo" class="logo">
                    }
                    <div class="logo-text">Admin Dashboard</div>
                </div>

                <!-- Sidebar Links -->
                <a href="/user/index1" class="active">
                    <i class="fas fa-home"></i> Home
                </a>
                <a href="/user/index">
                    <i class="fas fa-users"></i> User Management
                </a>
                <a href="/Roles/index">
                    <i class="fas fa-user-shield"></i> Role Management
                </a>
                <a href="/Home">
                    <i class="fas fa-desktop"></i> Homepage Management
                </a>
                <a href="/Categories">
                    <i class="fas fa-folder"></i> Category Management
                </a>
                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </li>
            </nav>

            <!-- Main Content -->
            <main>
                <div class="container">
                    <main role="main" class="pb-3" style="margin: 5%;">
                        @RenderBody() <!-- Content dynamically added here -->
                    </main>
                </div>
            </main>
        </div>
    </div>

    <!-- FontAwesome and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
